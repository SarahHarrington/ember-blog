<h1>Sign up form!!</h1>
<form>
  <label for="">Name</label>
  <input {{on 'input' this.inputUpdated}} name="name" value={{this.draft.name}} type="text">

  <br>
  <label for="">Email</label>
  <input {{on 'input' this.inputUpdated}} name="email" value={{this.draft.email}} type="email">
<br>
  <label for="">Password</label>
  <input {{on 'input' this.inputUpdated}} name="password" value={{this.draft.password}} type="password">
<br>
  <label for="">Confirm Password</label>
  <input {{on 'input' this.inputUpdated}} name="passwordConfirmation" value={{this.draft.passwordConfirmation}} type="password">
<br>
  <button {{on "click" this.submitClicked}} type="submit" class="button">Done</button>
</form>
