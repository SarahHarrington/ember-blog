<div class="page-header">
  <LinkTo 
    @route="articles.new"
    class="gradient-text">
    Create New Post
  </LinkTo>
  <div class="select-block">
    <label for="sort-order"></label>
    <select 
      {{on "change" this.sortOrderChanged}} 
      name="sort-order" 
      id="sort-order" 
      class="select-css">
        <option value="DESC">Desc</option>
        <option value="TITLE">Title</option>
    </select>
  </div>
</div>
<main class="articles-container">
    {{#each this.articles as |article|}}
      <Articles::ArticleListItem @article={{article}}/>
    {{/each}}
</main>